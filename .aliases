# Empty the Trash on all mounted volumes and the main HDD. then clear the useless sleepimage
alias emptytrash=" \
    sudo rm -rfv /Volumes/*/.Trashes; \
    rm -rfv ~/.Trash/*; \
    sudo rm -v /private/var/vm/sleepimage; \
    rm -rv \"/Users/jclayton/Library/Application Support/stremio/Cache\";  \
    rm -rv \"/Users/jclayton/Library/Application Support/stremio/stremio-cache\" \
"

